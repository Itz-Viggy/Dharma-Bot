{
    "version": 2,
    "projects": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/next",
        "config": { "zeroConfig": true }
      },
      {
        "src": "backend/app/main.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "50mb"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/app/main.py"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/$1"
      }
    ]
  }
  